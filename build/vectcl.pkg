# just enough to run the demos
#@verbatim
Package VecTcLab0.2 {
  Require {Use kbskit8.6 sdx.kit tcllib_cur vectcl0.2 vectcltk0.2 ukaz0.2 tklib_cur}
  Source {Wget https://github.com/auriocus/VecTcLab/archive/v0.2.tar.gz}
  Configure {
    Kit {source $::starkit::topdir/vectclab.tcl} Tk
  }
  Make {Kit VecTcLab tcllib_cur vectcl0.2 vectcltk0.2 ukaz0.2 tklib_cur}
  Install {Kit VecTcLab -vq-gui}
  Clean {file delete -force VecTcLab.vfs}
  Test {Kit VecTcLab}
}
#@endverbatim

